# Healthcare Risk Platform - Environment Configuration Template
# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/healthcare_risk

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_COOKIE_SECURE=True

# ============================================================================
# SMTP EMAIL CONFIGURATION
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@healthcareplatform.com

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_CONTENT_LENGTH=16777216
LOCAL_STORAGE_PATH=./uploads

# ============================================================================
# CELERY & BACKGROUND TASKS
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ADVANCED_ANALYTICS=True
FEATURE_MACHINE_LEARNING=True
FEATURE_TELEHEALTH=False
FEATURE_MOBILE_APP=False
FEATURE_BATCH_PROCESSING=True
FEATURE_DATA_EXPORT=True

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================
HIPAA_COMPLIANT=True
GDPR_COMPLIANT=True
COMPLIANCE_MODE=strict
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
PATIENT_DATA_ANONYMIZATION_ENABLED=True

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=alerts

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_VERSION=v1
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# ============================================================================
# TESTING
# ============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/healthcare_risk_test
TEST_REDIS_URL=redis://localhost:6379/15
TEST_ENVIRONMENT=False
