# Healthcare Risk Platform - Environment Configuration Template
# Copy this file to .env and fill in your configuration values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://healthcare_user:healthcare_password@localhost:5432/healthcare_risk_platform
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=healthcare_risk_platform
DATABASE_USER=healthcare_user
DATABASE_PASSWORD=healthcare_password

# ============================================================================
# REDIS CONFIGURATION (Caching & Sessions)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4
API_TIMEOUT=30
API_MAX_CONTENT_LENGTH=16777216

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=2592000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=True
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ============================================================================
# EHR SYSTEM INTEGRATION
# ============================================================================
EHR_API_URL=https://ehr-system.example.com/api
EHR_API_KEY=your-ehr-api-key
EHR_API_SECRET=your-ehr-api-secret
EHR_TIMEOUT=30
EHR_VERIFY_SSL=True

# ============================================================================
# EMAIL & NOTIFICATIONS
# ============================================================================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=noreply@healthcare.com
SMTP_PASSWORD=smtp-password-here
SMTP_FROM_EMAIL=noreply@healthcare.com
SMTP_FROM_NAME=Healthcare Risk Platform
SMTP_TIMEOUT=10

# Email Alerts
ALERT_EMAIL_ENABLED=True
ALERT_EMAIL_RECIPIENTS=alerts@healthcare.com
ALERT_EMAIL_FREQUENCY=realtime

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/healthcare_risk_platform/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10
AUDIT_LOG_FILE=/var/log/healthcare_risk_platform/audit.log

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ============================================================================
# MACHINE LEARNING & ANALYTICS
# ============================================================================
ML_MODEL_PATH=/app/models/risk_prediction_model.pkl
ML_MODEL_VERSION=1.0.0
ML_BATCH_SIZE=32
ML_PREDICTION_THRESHOLD=0.5
ANALYTICS_ENABLED=True
ANALYTICS_WAREHOUSE_URL=

# ============================================================================
# FILE STORAGE
# ============================================================================
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/app/storage
S3_BUCKET_NAME=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
FILE_UPLOAD_MAX_SIZE=52428800

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ADVANCED_ANALYTICS=True
FEATURE_MACHINE_LEARNING=True
FEATURE_TELEHEALTH=False
FEATURE_MOBILE_APP=False
FEATURE_BATCH_PROCESSING=True
FEATURE_DATA_EXPORT=True

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================
HIPAA_COMPLIANT=True
GDPR_COMPLIANT=True
COMPLIANCE_MODE=strict
DETA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
PATIENT_DATA_ANONYMIZATION_ENABLED=True

# ============================================================================
# CELERY & BACKGROUND TASKS
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

SLACK_WEBHOOK_URL=
SLACK_CHANNEL=alerts

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_VERSION=v1
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# ============================================================================
# TESTING
# ============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/healthcare_risk_test
TEST_REDIS_URL=redis://localhost:6379/15
TEST_ENVIRONMENT=False
